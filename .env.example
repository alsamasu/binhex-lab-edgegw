# =============================================================================
# binhex-lab-edgegw Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment.
#
# IMPORTANT: This gateway uses alternative ports (8080/8443) by default
# to avoid conflicts with existing reverse proxies on 80/443.
# =============================================================================

# -----------------------------------------------------------------------------
# ACME / Let's Encrypt Configuration
# -----------------------------------------------------------------------------
# Email for Let's Encrypt certificate notifications
ACME_EMAIL=you@example.com

# Base domain for services (used in documentation, not auto-configured)
BASE_DOMAIN=example.yourdomain.tld

# Dashboard hostname (use with Host header for testing)
DASHBOARD_HOST=traefik.local

# Use Let's Encrypt staging server (recommended for testing)
# Set to "false" for production certificates
STAGING=true

# -----------------------------------------------------------------------------
# Port Configuration
# -----------------------------------------------------------------------------
# Alternative ports to avoid conflict with existing proxy on 80/443
# Change these if you want different ports
HTTP_PORT=8080
HTTPS_PORT=8443

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Force HTTPS redirect on all services
FORCE_HTTPS=true

# Enable HSTS headers
ENABLE_HSTS=true

# Dashboard basic auth credentials (generate with: htpasswd -nB admin)
# Default: admin / changeme (DO NOT USE IN PRODUCTION)
DASHBOARD_AUTH=admin:$2y$05$LhayLxezLhK6oVGKVpW9zO4b5kDGBc5kW5bZr7bFkMvSQ7s2LbOai

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Timezone
TZ=UTC

# -----------------------------------------------------------------------------
# Optional: Production Mode
# -----------------------------------------------------------------------------
# Uncomment these for production use (requires valid DNS + open ports)
# HTTP_PORT=80
# HTTPS_PORT=443
# STAGING=false
# DASHBOARD_HOST=traefik.yourdomain.tld
